<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title">Active Vulnerabilities</h3>
      </div>

      <div class="box-body">
        <div id="user_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

          <div class="row">
            <div class="col-sm-12">
              <table id="active_vuln" class="table table-bordered table-striped dataTable" role="grid">
                <thead>
                <tr>
                  <th class="col-xs-1">ID</th>
                  <th>Type</th>
                  <th>Description</th>
                  <th>Published</th>
                  <th>Modified</th>
                  <th>URL</th>
                  <th>Score</th>
                </tr>
                </thead>
                <tbody>
                <% if @vulnerabilities.size == 0 %>
                    <tr>
                      <td colspan="6">No vulnerabilities found.</td>
                    </tr>
                <% else %>
                    <% @vulnerabilities.each do |vulnerability| %>
                    <tr>
                      <td><%=link_to vulnerability.id, admin_vulnerability_path(vulnerability) %></td>
                      <td><%= vulnerability.type %></td>
                      <td><%=h truncate(vulnerability.description, :length => 80) %></td>
                      <td><%= vulnerability.published %></td>
                      <td><%= vulnerability.modified %></td>
                      <td><%= link_to vulnerability.href, vulnerability.href , target: :_blank %></td>
                      <td><%= vulnerability.cvss.score %></td>
                    </tr>
                <% end %>
                <% end %>
                </tbody>
                <tfoot>
                <tr role="row">
                  <th class="col-xs-1">ID</th>
                  <th>Type</th>
                  <th>Description</th>
                  <th>Published</th>
                  <th>Modified</th>
                  <th>URL</th>
                  <th>Score</th>
                </tr>
                </tfoot>
              </table>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-2 col-md-offset-10">
  </div>
</div>