<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title">Vulnerability - <%= @vulnerabilities.id %></h3>
      </div>

      <div class="box-body">
        <p><b>ID: </b><%= @vulnerabilities.id %></p>
        <p><b>Published: </b><%= @vulnerabilities.published %></p>
        <p><b>Modified: </b><%= @vulnerabilities.modified %></p>
        <p><b>CVSS Score: </b><%= @vulnerabilities.cvss.score %></p>
        <p><b>URL: </b><%= link_to @vulnerabilities.href, @vulnerabilities.href , target: :_blank %></p>
        <p><b>Description: </b><%= @vulnerabilities.description %></p>
      </div>

      <div class="box-footer">
        <%= link_to 'Back', admin_vulnerabilities_path, class: 'btn btn-info' %>
      </div>

    </div>
  </div>
</div>