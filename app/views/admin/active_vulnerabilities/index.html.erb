<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title">Active Vulnerabilities</h3>
      </div>

      <div class="box-body">
        <div id="user_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

          <div class="row">
            <div class="col-sm-12">
              <table id="active_vuln" class="table table-bordered table-striped dataTable" role="grid">
                <thead>
                <tr>
                  <th class="col-xs-1">ID</th>
                  <th>Name</th>
                  <th>Count</th>
                  <th class="col-xs-1">Active?</th>
                  <th class="col-xs-1">Actions</th>
                </tr>
                </thead>

                <tbody>
                <% @activevulnerabilities.each do |activevulnerability| %>
                    <tr>
                      <td> <%= activevulnerability.id %> </td>
                      <td> <%= activevulnerability.displayname %> </td>
                      <td> <%= activevulnerability.vulncount %> </td>
                      <td> <%= activevulnerability.active %> </td>
                      <td>
                        <div class="btn-row">
                          <%= link_to raw('<i class="fa fa-cogs"></i>'), edit_active_vulnerability_url(activevulnerability), class: 'btn btn-sm btn-warning' %>
                        </div>
                      </td>
                    </tr>
                <% end %>
                </tbody>

                <tfoot>
                <tr role="row">
                  <th>ID</th>
                  <th>Name</th>
                  <th>Count</th>
                  <th class="col-xs-1">Active?</th>
                  <th class="col-xs-1">Actions</th>
                </tr>
                </tfoot>
              </table>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-2 col-md-offset-10">
  </div>
</div>
